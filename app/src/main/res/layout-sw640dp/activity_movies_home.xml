    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    tools:context="com.example.android.gridview.MoviesHome">

    <fragment
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/fragment_movies"
        android:name="com.example.android.gridview.GridviewFragment"
        tools:layout="@layout/activity_gridview_fragment">

    </fragment>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/second_details_fragment"></FrameLayout>
</LinearLayout>


